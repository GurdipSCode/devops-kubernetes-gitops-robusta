# Robusta Secrets
# IMPORTANT: Do NOT commit this file with real values!
# Use one of these approaches:
#   1. Sealed Secrets
#   2. External Secrets Operator
#   3. ArgoCD Vault Plugin
#   4. SOPS encryption
#
# This file is a TEMPLATE - copy to secrets.yaml and add real values

apiVersion: v1
kind: Secret
metadata:
  name: robusta-secrets
  namespace: robusta
type: Opaque
stringData:
  # Slack Bot Token (starts with xoxb-)
  SLACK_API_KEY: "xoxb-your-slack-bot-token"
  
  # Microsoft Teams Webhook URL
  # TEAMS_WEBHOOK_URL: "https://outlook.office.com/webhook/..."
  
  # PagerDuty Integration Key
  # PAGERDUTY_API_KEY: "your-pagerduty-integration-key"
  
  # OpsGenie API Key
  # OPSGENIE_API_KEY: "your-opsgenie-api-key"
  
  # Discord Webhook URL
  # DISCORD_WEBHOOK_URL: "https://discord.com/api/webhooks/..."
  
  # Jira credentials
  # JIRA_USERNAME: "your-email@company.com"
  # JIRA_API_KEY: "your-jira-api-token"
  
  # Generic webhook token
  # WEBHOOK_TOKEN: "your-webhook-token"

---
# Example: Using Sealed Secrets
# Install: https://sealed-secrets.netlify.app/
#
# 1. Create regular secret:
#    kubectl create secret generic robusta-secrets \
#      --from-literal=SLACK_API_KEY=xoxb-xxx \
#      --dry-run=client -o yaml > secret.yaml
#
# 2. Seal it:
#    kubeseal --format yaml < secret.yaml > sealed-secret.yaml
#
# 3. Commit sealed-secret.yaml (safe to commit!)

